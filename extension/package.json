{
  "name": "aether-ai-terminal-extension",
  "displayName": "Aether AI Terminal Assistant",
  "description": "Surface the Aether AI terminal assistant inside VS Code with quick models, utilities, and contextual controls.",
  "version": "2.0.0",
  "publisher": "kunjshah95",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/KunjShah95/NEXUS-AI.io"
  },
  "homepage": "https://github.com/KunjShah95/NEXUS-AI.io#readme",
  "bugs": {
    "url": "https://github.com/KunjShah95/NEXUS-AI.io/issues"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "terminal",
    "aether",
    "nexus",
    "gpt",
    "chatgpt",
    "code-assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.86.0"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.3",
    "@types/vscode": "^1.86.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/**",
    "media/**"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aetherAi.startAssistant",
        "title": "Aether AI: Start Assistant",
        "category": "Aether AI"
      },
      {
        "command": "aetherAi.stopAssistant",
        "title": "Aether AI: Stop Assistant",
        "category": "Aether AI"
      },
      {
        "command": "aetherAi.sendQuickCommand",
        "title": "Aether AI: Run Quick Command",
        "category": "Aether AI"
      },
      {
        "command": "aetherAi.openAssistantPanel",
        "title": "Aether AI: Open Assistant Panel",
        "category": "Aether AI"
      },
      {
        "command": "aetherAi.insertTimestamp",
        "title": "Insert Timestamp",
        "category": "Aether AI"
      }
    ],
    "configuration": {
      "title": "Aether AI Terminal Assistant",
      "properties": {
        "aetherAiAssistant.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter used to launch the terminal assistant."
        },
        "aetherAiAssistant.preferredModel": {
          "type": "string",
          "default": "gpt-5.1-codex-mini",
          "description": "Preferred model that the assistant should advertise when multiple backends are available."
        },
        "aetherAiAssistant.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the assistant when the workspace opens."
        }
      }
    }
  }
}